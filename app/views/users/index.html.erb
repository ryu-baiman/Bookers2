<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list', book: @book, user: current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th><%= attachment_image_tag user, :profile_image, size:'40x40', format: 'jpeg', fallback: "no_image.jpg" %></th>
            <th><%= user.name %></th>
            <th><%= link_to "Show", user_path(user.id) %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>